  CREATE TABLE `board` (
  `seq` int(11) NOT NULL AUTO_INCREMENT,
  `member_id` varchar(300) NOT NULL,
  `title` varchar(300) NOT NULL,
  `price` varchar(300) NOT NULL,
  `content` text NOT NULL,
  `address` varchar(500) NOT NULL,
  `category` varchar(300) NOT NULL,
  `del_yn` char(1) NOT NULL DEFAULT 'n',
  `create_date` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP,
  `update_date` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP,
  `delete_date` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP,
  `view_cnt` int(11) NOT NULL DEFAULT '0',
  `like_cnt` int(11) NOT NULL DEFAULT '0',
  `img1` varchar(500) DEFAULT NULL,
  `img2` varchar(500) DEFAULT NULL,
  `img3` varchar(500) DEFAULT NULL,
  `img4` varchar(500) DEFAULT NULL,
  `img5` varchar(500) DEFAULT NULL,
  `img6` varchar(500) DEFAULT NULL,
  `img7` varchar(500) DEFAULT NULL,
  `img8` varchar(500) DEFAULT NULL,
  `img9` varchar(500) DEFAULT NULL,
  `img10` varchar(500) DEFAULT NULL,
  PRIMARY KEY (`seq`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8